---
import { getCollection } from "astro:content";
import Base from "../../layouts/Base.astro";

export async function getStaticPaths() {
    const allFoundations = await getCollection("foundations");

    return allFoundations.map((foundation) => ({
        params: { id: foundation.id },
        props: { foundation },
    }));
}

const { foundation } = Astro.props;
---

<Base title={foundation.data.title}>
    <h1>{foundation.data.title}</h1>
    <p>{foundation.data.description}</p>
</Base>

<style>
    ul > li:not(:last-child) {
        border-bottom: solid grey 1px;
        padding-bottom: var(--sp-l);
        margin-bottom: var(--sp-xl);
    }

    h3 {
        margin-bottom: var(--sp-2xs);
    }

    time {
        display: block;
        margin-bottom: var(--sp-l);
    }
</style>
